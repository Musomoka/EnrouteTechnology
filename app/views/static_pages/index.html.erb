<!--Contact section-->


<div class="container-fluid contact-form content-format" id="Contact">
	<div class="container bg-cust form-bg">
		<div class="row">
			<h2 class="section-heading contact-heading">Contact</h2>
		</div>

		<div class="row ">
			<div class="mx-auto  col-lg-6 col-md-6 col-sm-12 col-xs-12 about-text">

				<form>
					<div class="form-group">
						<label for="InputEmail1"> Full Name</label>
						<input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Full Name">

					</div>
					<div class="form-group">
						<label for="InputEmail1">Email address</label>
						<input type="email" class="form-control " id="InputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
						<small id="emailHelp" class="form-text">We'll never share your email with anyone else.</small>
					</div>
			</div>

			<div class="mx-auto  col-lg-6 col-md-6 col-sm-12 col-xs-12 about-media">
				<div class="form-group">
					<label for="messageInput">Message </label>
					<textarea type="textarea" class="form-control" rows="4" id="messageInput"></textarea>

				</div>
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>

	</div>
</div>



